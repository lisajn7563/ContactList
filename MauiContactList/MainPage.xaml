<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:C__ContactList.Models"
             x:Class="MauiContactList.MainPage">
    

    <Grid RowDefinitions="auto,*" 
          ColumnDefinitions=".75*, .25*"
          Padding="20,50,20,50" Background="LightBlue"
          ColumnSpacing="10"
          RowSpacing="20">
          

        <Entry Grid.Row="0" Grid.Column="0" Placeholder="Skapa en Kontakt...."/>
        <Button Grid.Row="0" Grid.Column="1" Text="lägg till"/>

        <CollectionView x:Name="ContactList" ItemsSource="{Binding Contacts}" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,30,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:ContactPerson}">
                    <Frame Margin="0,0,0,20">
                        <Label Text="{Binding FirstName}"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
 
        </CollectionView>
    </Grid>

</ContentPage>
